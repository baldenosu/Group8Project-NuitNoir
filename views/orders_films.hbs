<div id="browse" style="display: block">
    {{!-- Create Order Films Intersection Table--}}
    <h3>Browse Orders_Films</h3>
    <table id="order_films-table" border="1" cellpadding="5">
        <thead>
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.[Order ID]}}</td>
                <td>{{this.Film}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table> 
</div>
<p>&nbsp;</p>   
<div id="insert" style="display: block">
    <form id="addOrdersFilms">
        <legend>
            <strong>Add Order_Films</strong>
        </legend>
        <fieldset class="fields">
            <label>Order ID</label>
            <input type="text" name="orderID">
            <label>Film Name</label>
            <input type="text" name="filmID">
        </fieldset>
        <input class="btn" type="submit" id="addOrdersFilms" value="Add Orders_Films">
        <input class="btn" type="button" value="Cancel">
    </form>
</div>